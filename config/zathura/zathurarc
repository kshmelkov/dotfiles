set font                        "inconsolata 13"

# setting recolor-keephue true will keep any color your pdf
# has.  If it is set to false, it will just be shades of
# gray.  (lol 50 shades of gray)
set recolor-keephue             "true"

set zoom-step 25
set smooth-scroll true
set adjust-open width
set selection-clipboard clipboard
set scroll-page-aware true
set scroll-step 100.0

map q quit
map <PageUp> scroll full-up
map <PageDown> scroll full-down
#map u scroll half_up
#map d scroll half_down
#map b scroll full_up
#map f scroll full_down
map ] scroll half-down
map [ scroll half-up
